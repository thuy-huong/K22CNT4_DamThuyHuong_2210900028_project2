@model DamThuyHuong_K22CNT4_2210900028_project2.ViewModels.BannerSanPhamVM

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <!-- Banner -->
    <div id="carouselExampleIndicators" class="carousel slide mb-4" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Public/UpLoadImg/imgBanner/banner1.webp" class="d-block w-100" alt="Banner 2">
            </div>
            @foreach (var item in Model.banners)
            {
                <div class="carousel-item ">
                    <img src="~/Public/UpLoadImg/imgBanner/@item.hinhAnh" class="d-block w-100" alt="Banner 2">
                </div>

            }

            @*<div class="carousel-item">
                    <img src="~/Public/UpLoadImg/imgBanner/banner2.webp" class="d-block w-100" alt="Banner 2">
                </div>
                <div class="carousel-item">
                    <img src="~/Public/UpLoadImg/imgBanner/banner3.webp" class="d-block w-100" alt="Banner 3">
                </div>*@
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <section class="ftco-section ftco-no-pt ftco-no-pb">
        <div class="container">
            <div class="row no-gutters ftco-services">
                <div class="col-lg-4 text-center d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 services p-4 py-md-5">
                        <div class="icon d-flex justify-content-center align-items-center mb-4">
                            <span class="flaticon-bag"></span>
                        </div>
                        <div class="media-body">
                            <h3 class="heading">Free Shipping</h3>

                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-center d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 services p-4 py-md-5">
                        <div class="icon d-flex justify-content-center align-items-center mb-4">
                            <span class="flaticon-customer-service"></span>
                        </div>
                        <div class="media-body">
                            <h3 class="heading">Support Customer</h3>

                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-center d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 services p-4 py-md-5">
                        <div class="icon d-flex justify-content-center align-items-center mb-4">
                            <span class="flaticon-payment-security"></span>
                        </div>
                        <div class="media-body">
                            <h3 class="heading">Secure Payments</h3>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Sản phẩm nổi bật -->
    <h2 class="featured-title">Sản Phẩm Nổi Bật</h2>
    <div class="product-slider">
        @foreach (var item in Model.sanPhams)
        {
            <div class="product-item-new" style="padding: 10px;">
                <div class="card product-card">
                    <a href="@Url.Action("DthDetail","DthSanPham" ,new { id = item.maSanPham })">
                        <img src="~/Public/UpLoadImg/imgSanPham/@item.hinhAnh" class="card-img-top" alt="@item.tenSanPham">
                    </a>
                    <div class="card-body">
                        <a href="@Url.Action("DthDetail","DthSanPham" ,new { id = item.maSanPham })">
                            <h5 class="card-title">@item.tenSanPham</h5>
                        </a>
                        <p class="card-text">Giá: @item.gia.ToString("N0") VND</p>
                        @using (Html.BeginForm("DthAddItem", "DthCart", FormMethod.Post))
                        {
                            <input type="hidden" value="@item.maSanPham" name="maSanPham" />
                            <input type="hidden" value="1" name="soLuong" />
                            <button type="submit" style="background-color: #ee589e; color: white; border: none; padding: 10px 15px; border-radius: 5px; cursor: pointer; transition: background-color 0.2s, transform 0.2s;">Thêm vào giỏ hàng</button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
  
    <h2 class=" featured-title" style="padding-top: 50px;">MERZY - THƯƠNG HIỆU CỦA SỰ CÁ TÍNH</h2>
    <div class="brand-info">
        <div class="brand-image-container">
            <img src="~/Public/UpLoadImg/imgSanPham/anhson.webp" alt="Sản phẩm của Merzy" class="brand-image">
        </div>
        <div class="brand-description-container">
            <p class="brand-description">
                Là 1 thương hiệu mỹ phẩm đến từ Hàn Quốc, MERZY không chỉ mang đến cho khách hàng những sản phẩm đa dạng từ mẫu mã đến chất lượng mà còn gửi gắm thông điệp về sự cá tính của mỗi cá thể, ủng hộ sự tự tin và lan truyền năng lượng tích cực đến tất cả những người yêu cái đẹp.
            </p>
            <p class="brand-description">
                Tháng 3/2020, một siêu phẩm son lì phiên bản giới hạn - Merzy Velvet Tint V6 Blue đã đưa cái tên MERZY đến gần hơn với các bạn trẻ Việt Nam. Dường như sức nóng của son lì V6 chưa bao giờ giảm nhiệt, MERZY từ đó luôn không ngừng phát triển để mang đến cho cộng đồng người yêu làm đẹp những bộ sưu tập son chất lượng tốt, mang tính ứng dụng cao nhưng vẫn đảm bảo tính thời thượng.
            </p>
            <p class="brand-description">
                MERZY luôn đặt trải nghiệm khách hàng lên hàng đầu và không ngừng cải thiện chất lượng dịch vụ giao hàng, thanh toán nhanh và an toàn. Hãng cũng có mặt trên các sàn thương mại điện tử như Shopee, Lazada,.. để tối ưu hóa sự hài lòng của khách hàng khi đặt hàng tại MERZY.
            </p>
        </div>
    </div>
</div>




