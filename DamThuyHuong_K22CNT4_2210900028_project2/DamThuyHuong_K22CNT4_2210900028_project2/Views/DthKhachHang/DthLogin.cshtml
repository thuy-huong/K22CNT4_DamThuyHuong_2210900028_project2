
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="login">

    <div class="login-form">
        <h2>Đăng Nhập </h2>
        @using (Html.BeginForm("DthLogin", "DthKhachHang", FormMethod.Post))
        {
            <input type="hidden" value="@ViewBag.ReturnUrl" name="ReturnUrl"/>
            <p class="text-danger">@TempData["error"] </p>
            <div class="login_group">
                <label for="username" class="form-label">Tài Khoản</label>
                <input type="text" class="form_control_imput" id="username" placeholder="Nhập tài khoản" name="email" required>
            </div>

            <div class="login_group">
                <label for="password" class="form-label">Mật Khẩu</label>
                <div style="position: relative;">
                    <input type="password" class="form_control_imput" id="password" placeholder="Nhập mật khẩu" name="matKhau" required>
                    <button type="submit" id="togglePassword" style="position: absolute; right: 10px; top: 10px; border: none; background: none; cursor: pointer;">
                        Hiện
                    </button>
                </div>
            </div>
            <button type="submit" class="btn_login">Đăng Nhập</button>
            <div class="text-center mt-3">
                <a class="text-muted" href="@Url.Action("DthSignIn","DthKhachHang" )">Đăng Ký</a>
            </div>
        }
    </div>

</div>

@section Scripts{
    <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordInput = document.getElementById('password');
            const passwordType = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', passwordType);
            this.textContent = passwordType === 'password' ? 'Hiện' : 'Ẩn';
        });

    </script>
}
