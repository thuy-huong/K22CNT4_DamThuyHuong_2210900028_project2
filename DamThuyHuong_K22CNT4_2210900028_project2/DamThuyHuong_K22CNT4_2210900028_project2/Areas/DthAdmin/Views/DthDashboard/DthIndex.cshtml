@model DamThuyHuong_K22CNT4_2210900028_project2.ViewModels.DashboardVM
@{
    ViewBag.Title = "DthIndex";
    Layout = "~/Areas/DthAdmin/Views/Shared/_LayoutAdmin.cshtml";

    var revenueData = ViewBag.RevenueData as List<DamThuyHuong_K22CNT4_2210900028_project2.Models.RevenueDto>; // Sử dụng List<RevenueDto>
    var months = revenueData.Select(r => r.Month).ToArray();
    var revenues = revenueData.Select(r => r.TotalRevenue).ToArray();
}

<div class="container">

    <div class="row">
        <div class="col-md-4">
            <div class="info-box">
                <h4>Tổng Số Sản Phẩm</h4>
                <p>@ViewBag.TongSanPham </p>
                <a href="@Url.Action("DthIndex","DthSanPhams" )" class="btn btn-light">Xem Thêm</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="info-box">
                <h4>Tổng Số Khách Hàng</h4>
                <p>@ViewBag.TongKhachHang </p>
                <a href="@Url.Action("DthIndex", "DthKhachHangs")" class="btn btn-light">Xem Thêm</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="info-box">
                <h4>Tổng Số Đơn Hàng</h4>
                <p>@ViewBag.TongDonHang</p>
                <a href="@Url.Action("DthIndex","DthDonHang" )" class="btn btn-light">Xem Thêm</a>
            </div>
        </div>
    </div>


    <div class="row mt-4" style="background:  white;">
        <!-- Quản lý đơn hàng -->
        <div class="col-md-6">
            <div class="dashboard-section">
                <h3>Quản Lý Đơn Hàng</h3>
                <ul class="nav nav-tabs" id="orderTabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#pending">Chờ Xử Lý</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#shipping">Đang Giao Hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#completed">Thành Công</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#canceled">Đã Hủy</a>
                    </li>
                </ul>
                <div class="tab-content mt-3">
                    <div class="tab-pane fade show active" id="pending">
                        <table>
                            <thead style="background-color: #ff69b4; /* Màu hồng */ color: white; font-weight: bold;">
                                <tr>
                                    <td>Tên khách</td>
                                    <td>Địa chỉ</td>
                                    <td>Điện thoại</td>
                                    <td>Trạng thái</td>
                                    <td>Tổng tiền</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.donHangs)
                                {
                                    if (item.trangThai == 1)
                                    {
                                        <tr>
                                            <td>@item.tenKhachHang</td>
                                            <td>@item.diaChiGiaoHang</td>
                                            <td>@item.dienthoai</td>
                                            <td><button class="btn btn-primary">Chở xử lý</button></td>
                                            <td>@item.tongTien</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="shipping">
                        <table>
                            <thead style="background-color: #ff69b4; /* Màu hồng */ color: white; font-weight: bold;">
                                <tr>
                                    <td>Tên khách</td>
                                    <td>Địa chỉ</td>
                                    <td>Điện thoại</td>
                                    <td>Trạng thái</td>
                                    <td>Tổng tiền</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.donHangs)
                                {
                                    if (item.trangThai == 2)
                                    {
                                        <tr>
                                            <td>@item.tenKhachHang</td>
                                            <td>@item.diaChiGiaoHang</td>
                                            <td>@item.dienthoai</td>
                                            <td><button class="btn btn-info">Đang giao</button></td>
                                            <td>@item.tongTien</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="completed">
                        <table>
                            <thead style="background-color: #ff69b4; /* Màu hồng */ color: white; font-weight: bold;">
                                <tr>
                                    <td>Tên khách</td>
                                    <td>Địa chỉ</td>
                                    <td>Điện thoại</td>
                                    <td>Trạng thái</td>
                                    <td>Tổng tiền</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.donHangs)
                                {
                                    if (item.trangThai == 3)
                                    {
                                        <tr>
                                            <td>@item.tenKhachHang</td>
                                            <td>@item.diaChiGiaoHang</td>
                                            <td>@item.dienthoai</td>
                                            <td><button class="btn btn-success">Thành công</button></td>
                                            <td>@item.tongTien</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="canceled">
                        <table>
                            <thead style="background-color: #ff69b4;  color: white; font-weight: bold;">
                                <tr>
                                    <td>Tên khách</td>
                                    <td>Địa chỉ</td>
                                    <td>Điện thoại</td>
                                    <td>Trạng thái</td>
                                    <td>Tổng tiền</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.donHangs)
                                {
                                    if (item.trangThai == 4)
                                    {
                                        <tr>
                                            <td>@item.tenKhachHang</td>
                                            <td>@item.diaChiGiaoHang</td>
                                            <td>@item.dienthoai</td>
                                            <td><button class="btn btn-upgrade">Đã hủy</button></td>
                                            <td>@item.tongTien</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Khách hàng thân thiết -->
        <div class="col-md-6">
            <div class="dashboard-section">
                <h3>Khách Hàng Thân Thiết</h3>
                <table>
                    <thead style=" background-color: #ff69b4; /* Màu hồng */ color: white; font-weight: bold;">
                        <tr>
                            <th>Tên Khách Hàng</th>
                            <th>Email</th>
                            <th>Số Điện Thoại</th>
                            <th>Đơn hàng đã mua</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.KhachHang)
                        {
                            <tr>
                                <td>@item.tenKhachHang</td>
                                <td>@item.email</td>
                                <td>@item.dienThoai</td>
                                <td>@item.donHangs.Count()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Biểu đồ doanh thu -->
    <div class="dashboard-section mt-4">
        <h3>Biểu Đồ Doanh Thu</h3>
        <div class="form-group">
            <label for="timePeriod" class="mr-2">Chọn Thời Gian:</label>
            <select class="custom-select" id="timePeriod">
                <option value="monthly">Theo Tháng</option>
                <option value="daily">Theo Ngày</option>
            </select>
            @*<select class="custom-select" id="monthSelect">
                <option value="1">Tháng 1</option>
                <option value="2">Tháng 2</option>
                <option value="3">Tháng 3</option>
                <option value="4">Tháng 4</option>
                <option value="5">Tháng 5</option>
                <option value="6">Tháng 6</option>
                <option value="7">Tháng 7</option>
                <option value="8">Tháng 8</option>
                <option value="9">Tháng 9</option>
                <option value="10">Tháng 10</option>
                <option value="11">Tháng 11</option>
                <option value="12">Tháng 12</option>
            </select>*@
        </div>
        <canvas id="revenueChart"></canvas>
    </div>
</div>
