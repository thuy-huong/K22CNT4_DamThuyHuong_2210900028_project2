@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/Public/Admin/Css/style.css">
</head>
<body>
    <div>
        <section id="sidebar">
            <a href="#" class="brand"><i class='bx bxs-smile icon'></i>MERZY</a>
            <ul class="side-menu">
                <li>
                    <a href="@Url.Action("DthIndex","DthDashboard")" class="active">
                        <i class='bx bxs-dashboard icon'></i>
                        @{


                            if (HttpContext.Current.Session["user"] != null)
                            {
                                var user = HttpContext.Current.Session["user"].ToString();
                                @user
                            }
                            else
                            {
                                @:Dashboard
                            }

                        }
                    </a>
                </li>
                <li class="divider" data-text="main">Quản lý sản phẩm</li>
                <li>
                    <a href="@Url.Action("Index","DthDanhMucs")"><i class="fa-solid fa-list icon"></i> Danh mục<i class='bx bx-chevron-right icon-right'></i></a>
                    <ul class="side-dropdown">
                        <li><a href="@Url.Action("Index","DthDanhMucs")">Danh sách</a></li>
                        <li><a href="@Url.Action("Create","DthDanhMucs")">Thêm mới</a></li>
                    </ul>
                </li>
                <li>
                    <a href="@Url.Action("DthIndex","DthSanPhams")"><i class="fa-solid fa-tags icon"></i>Sản phẩm<i class='bx bx-chevron-right icon-right'></i></a>
                    <ul class="side-dropdown">
                        <li><a href="@Url.Action("DthIndex","DthSanPhams")">Danh sách</a></li>
                        <li><a href="@Url.Action("DthCreate","DthSanPhams")">Thêm mới</a></li>
                    </ul>
                </li>
                <li>
                    <a href="@Url.Action("DthIndex","DthKhachHangs")"><i class="fa-solid fa-users icon"></i> Khách hàng </a>
                </li>
                <li><a href="@Url.Action("DthIndex","DthDonHang")"><i class="fa-solid fa-bag-shopping icon"></i> Đơn hàng</a></li>

                <li><a href="#"><i class="fa-solid fa-star icon"></i> Đánh giá</a></li>

                <li><a href="@Url.Action("DthIndex","DthBanner")"><i class="fa-regular fa-image icon"></i> Banner</a></li>
                <li><a href="@Url.Action("DthLogout","DthDashboard")"><i class="fa-solid fa-right-from-bracket icon"></i> Logout</a></li>
            </ul>
        </section>
        <!-- SIDEBAR -->
        <!-- NAVBAR -->
        <section id="content">
            <!-- NAVBAR -->
            <nav>
                <i class='bx bx-menu toggle-sidebar'></i>
                <form action="#">
                    <div class="form-group">
                        <input type="text" placeholder="Search...">
                        <i class='bx bx-search icon'></i>
                    </div>
                </form>
                <a href="#" class="nav-link">
                    <i class='bx bxs-bell icon'></i>
                    <span class="badge">5</span>
                </a>
                <a href="#" class="nav-link">
                    <i class='bx bxs-message-square-dots icon'></i>
                    <span class="badge">8</span>
                </a>
                <span class="divider"></span>
                <div class="profile">

                    <img src="~/Public/UpLoadImg/imgCus/thuyHuong.jfif" alt="">
                    <ul class="profile-link">
                        <li><a href="@Url.Action("DthLogout","DthDashboard")"><i class='bx bxs-log-out-circle icon'></i> Logout</a></li>
                        <li><a href="#"><i class='bx bxs-user-circle icon'></i> Profile</a></li>
                        <li><a href="#"><i class='bx bxs-cog icon'></i> Settings</a></li>

                    </ul>
                </div>
            </nav>
            <!-- NAVBAR -->
            @RenderBody()
            <!--  -->
        </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="~/Public/Admin/js/script.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
