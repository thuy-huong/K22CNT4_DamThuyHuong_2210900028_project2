
@using PagedList
@using PagedList.Mvc;
@model PagedList.IPagedList<DamThuyHuong_K22CNT4_2210900028_project2.Models.sanPham>
@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Areas/DthAdmin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container m-3">
    <p>
        @Html.ActionLink("Create New", "DthCreate", "null", new { @class = "btn btn-primary" })
    </p>
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Hình ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Giá </th>
                <th>
                    Màu sắc
                </th>
                <th>
                    Số lượng
                </th>
                <th>
                    Danh mục
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td><input type="checkbox" name="select1"></td>
                    <td>
                        <img src="@Url.Content("~/Public/UpLoadImg/imgSanPham/"+item.hinhAnh)" alt="@item.tenSanPham" width="100" height="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tenSanPham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.gia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mauSac)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.soLuong)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.danhMuc.tenDanhMuc)
                    </td>
                    <td>
                        <a class="text-primary" href="@Url.Action( "DthEdit", new { id = item.maSanPham })">
                            <i class="fa-solid fa-pen-to-square" style="font-size: 20px;"></i>
                        </a> |
                        <a class="text-success" href="@Url.Action("DthDetails", new { id = item.maSanPham })">
                            <i class="fa-solid fa-eye" style="font-size: 20px;"></i>
                        </a> |
                        <a class="text-danger" href="@Url.Action("DthDelete", new { id = item.maSanPham })">
                            <i class="fa-solid fa-trash" style="font-size: 20px;"></i>
                        </a> 
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation example" style="justify-content: center;">
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("DthIndex", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link" aria-hidden="true">&laquo;</span></li>
            }

            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.PageNumber)
                {
                    <li class="page-item active"><span class="page-link">@i</span></li>
                    ;
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("DthIndex", new { page = i })">@i</a>
                    </li>
                }
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("DthIndex", new { page = Model.PageNumber + 1 })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link" aria-hidden="true">&raquo;</span></li>
            }
        </ul>
    </nav>

</div>
