@model DamThuyHuong_K22CNT4_2210900028_project2.Models.sanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/DthAdmin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container m-4" style="background: #fff;">
    <div>
        <h4 class="text-center">Chi tiết Sản phẩm</h4>
        <hr />
        <dl class="dl-horizontal row">
            <dt class="col-sm-2">
                Hình ảnh
            </dt>
            <dd class="col-sm-10">
                <img src="@Url.Content("~/Public/UpLoadImg/imgSanPham/"+@Model.hinhAnh)" alt="@Model.tenSanPham" width="250" height="250" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.tenSanPham)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.tenSanPham)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.moTa)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.moTa)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.gia)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.gia)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.hinhAnh)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.hinhAnh)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.mauSac)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.mauSac)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.soLuong)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.soLuong)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.trangThai)
            </dt>

            <dd class="col-sm-10">
                @{
                    if (Model.trangThai == true)
                    {


                        @:Hiển thị
                    }
                    else
                    {
                        @:Ẩn
                    }
                }
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.danhMuc.tenDanhMuc)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.danhMuc.tenDanhMuc)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ngayTao)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ngayTao)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ngayCapNhat)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ngayCapNhat)
            </dd>
            <dt class="col-sm-2">Đánh giá</dt>
            <dd class="col-sm-10">
                @if (Model.danhGias != null && Model.danhGias.Any())
                {
                    foreach (var item in Model.danhGias)
                    {
                        <div class="review">
                            <b><a href="@Url.Action("DthDetail","DthKhachHangs", new { id = @item.maKhachHang } )">@item.khachHang.tenKhachHang</a></b>
                            <div class="rating" style="color: gold;">
                                @{
                                    int s = item.xepHang ?? 0;
                                    @Html.Raw(new string('★', s) + new string('☆', 5-s))
                                }
                            </div>
                            <p>@item.binhLuan</p>
                        </div>
                    }
                }
                else
                {
                    <p>Chưa có đánh giá nào cho sản phẩm này.</p>
                }
            </dd>
        </dl>

    </div>
    <p>
        @Html.ActionLink("Edit", "DthEdit", new { id = Model.maSanPham }, new { @class = "btn btn-success m-2" }) |
        @Html.ActionLink("Back to List", "DthIndex", "null", new { @class = "btn btn-primary m-2" })
    </p>

</div>
