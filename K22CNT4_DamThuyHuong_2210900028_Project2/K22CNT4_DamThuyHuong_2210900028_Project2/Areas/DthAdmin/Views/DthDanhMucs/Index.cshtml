@model IEnumerable<K22CNT4_DamThuyHuong_2210900028_Project2.Models.danhMuc>

@{
    ViewBag.Title = "Danh mục";
    Layout = "~/Areas/DthAdmin/Views/Shared/_layoutAdmin.cshtml";
}
<div class="container m-3">

    <p>
        @Html.ActionLink("Create New", "Create", "null", new { @class = "btn btn-primary" })
    </p>
    <table>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.tenDanhMuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.trangThai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.danhMuc2.tenDanhMuc)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox" name="select1"></td>
                <td>
                    @Html.DisplayFor(modelItem => item.tenDanhMuc)
                </td>
                <td>
                    @{ if (item.trangThai == true)
                        {
                            @:Hiển thị
                        }
                        else
                        {
                            @:Ẩn
                        }}
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.danhMuc2.tenDanhMuc)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.maDanhMuc }) |
                    @Html.ActionLink("Details", "Details", new { id = item.maDanhMuc }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.maDanhMuc })
                </td>
            </tr>
        }

    </table>

</div>